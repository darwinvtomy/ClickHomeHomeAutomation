<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="73.7dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="73.7dp"
        android:layout_height="73.7dp"
        android:contentDescription="@string/flower_name_placeholder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flower_name_placeholder"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />
    <SeekBar
        android:id="@+id/sbBar"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:indeterminate="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_below="@+id/textView1"
        android:layout_alignParentBottom="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:focusable="false"
        android:checked="false"


        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/sbBar"
        android:layout_alignEnd="@+id/sbBar"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Seek Status"
        android:id="@+id/seek"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toEndOf="@+id/textView1"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="69dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/out"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/sbBar"
        android:layout_alignEnd="@+id/sbBar" />

</RelativeLayout>
